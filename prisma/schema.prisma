generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

model Perfections {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  Title           String
  Type            String
  Image           String
  Orientation     String
  Address         String
  FrontRoad       String
  LandSize        String
  ApartmentSize   String
  NumberOfUnits   String
  NumberOfParking String
  NumberOfFloors  String
  status          Status   @default(CONFIRMED)
  createdAt       DateTime @default(now())
}

model testimonials {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  name      String
  Image     String
  status    Status   @default(CONFIRMED)
  createdAt DateTime @default(now())
}

model concerns {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  title     String
  Image     String
  status    Status   @default(CONFIRMED)
  createdAt DateTime @default(now())
}

model blogs {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  title     String
  Image     String
  status    Status   @default(CONFIRMED)
  createdAt DateTime @default(now())
}

model Slider {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  text      String
  Image     String
  status    Status   @default(CONFIRMED)
  createdAt DateTime @default(now())
}

model News {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  title     String
  Image     String
  status    Status   @default(CONFIRMED)
  createdAt DateTime @default(now())
}

model Photo {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  Image     String
  status    Status   @default(CONFIRMED)
  createdAt DateTime @default(now())
}

model Video {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  url       String
  status    Status   @default(CONFIRMED)
  createdAt DateTime @default(now())
}

model Enquiry {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName         String
  lastName          String
  phone             String
  secondPhone       String
  location          String
  landSize          String
  attractiveFeature String
  message           String
  email             String   @unique
  status            Status   @default(CONFIRMED)
  createdAt         DateTime @default(now())
}

enum Role {
  ADMIN
  USER
}

enum Status {
  CONFIRMED
  CANCELLED
}
